{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@universa11y/button": ["../../packages/button/src"],
      "@universa11y/avatar": ["../../packages/avatar/src"],
      "@universa11y/center": ["../../packages/center/src"],
      "@universa11y/checkbox": ["../../packages/checkbox/src"],
      "@universa11y/divider": ["../../packages/divider/src"],
      "@universa11y/heading": ["../../packages/heading/src"],
      "@universa11y/hstack": ["../../packages/hstack/src"],
      // "@gluestack/popper": ["../popper/src/index"],
      // "@gluestack/ui": ["../ui/src/index"],
      // "@gluestack/ui-lucide-icons": ["../ui/lucide-icons/src/"],
      "@gluestack/ui": ["../../packages/button/src"],
      "@universa11y/actionsheet": ["../../packages/actionsheet/src"],
      "@universa11y/vstack": ["../../packages/vstack/src"],
      "@universa11y/tooltip": ["../../packages/tooltip/src"],
      "@universa11y/popover": ["../../packages/popover/src"],
      "@universa11y/provider": ["../../packages/provider/src"],
      "@universa11y/textarea": ["../../packages/textarea/src"],
      "@universa11y/input": ["../../packages/input/src"],
      "@universa11y/switch": ["../../packages/switch/src"],
      "@universa11y/radio": ["../../packages/radio/src"],
      "@universa11y/spinner": ["../../packages/spinner/src"],
      "@universa11y/slider": ["../../packages/slider/src"],
      "@universa11y/link": ["../../packages/link/src"],
      "@universa11y/progress": ["../../packages/progress/src"],
      "@universa11y/menu": ["../../packages/menu/src"],
      "@universa11y/select": ["../../packages/select/src"],
      "@universa11y/modal": ["../../packages/modal/src"],
      "@universa11y/fab": ["../../packages/fab/src"],
      "@universa11y/alert-dialog": ["../../packages/alert-dialog/src"],
      "@universa11y/form-control": ["../../packages/form-control/src"],
      "@universa11y/icon-button": ["../../packages/icon-buttonl/src"],
      "@universa11y/icon": ["../../packages/icon/src"],
      "@universa11y/tabs": ["../../packages/tabs/src"],
      "@universa11y/floating-ui": ["../../packages/floating-ui/src"],
      "@universa11y/overlay": ["../../packages/overlay/src"],
      "@universa11y/stack": ["../../packages/stack/src"]
    },
    "emitDeclarationOnly": true,
    "noEmit": false,
    "declaration": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": true,
    "esModuleInterop": true,
    "importsNotUsedAsValues": "error",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "noStrictGenericChecks": false,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": ["lib", "node_modules", "storybookDocsComponents"]
}
