function Example() {
  const [date, setDate] = React.useState(new Date());

  return (
    <Box className="p-4 w-full">
      <DateTimePicker
        value={date}
        onChange={setDate}
        mode="datetime"
        placeholder="Select date and time"
      >
        <DateTimePickerTrigger>
          <DateTimePickerInput />
          <DateTimePickerIcon as={CalendarDaysIcon} />
        </DateTimePickerTrigger>
      </DateTimePicker>
    </Box>
  );
}
