{
  "include": ["src"],
  "exclude": ["node_modules", "example"],
  "paths": {
    "@universa11y/react-native-aria": ["../react-native-aria/src"],
    "@universa11y/utils": ["../utils/src"],
    "universa11y/icon": ["../icon/src"],
    "@universa11y/transitions": ["../transitions/src"],
    "@universa11y/overlay": ["../overlay/src"],
    "@universa11y/hooks": ["../hooks/src"]
  },
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "noEmit": false,
    "baseUrl": "",
    "declaration": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": true,
    "esModuleInterop": true,
    "importsNotUsedAsValues": "error",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "noStrictGenericChecks": false,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext"
  }
}
